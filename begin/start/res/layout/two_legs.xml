<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_vertical|center_horizontal" android:baselineAligned="false">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Two Robots legs."
            android:gravity="center" android:layout_marginBottom="20dp" android:clickable="false"
            android:textStyle="bold" android:typeface="monospace"
            android:textSize="33dp"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Premium Car"
            android:onClick="chosenPremiumCar"
            android:layout_gravity="center"
            android:background="@drawable/blue_button"
            style="@style/ButtonText"/>

    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Standard Car"
            android:onClick="chosenStandardCar"
            android:layout_gravity="center"
            android:background="@drawable/violet_button"
            style="@style/ButtonText"/>



</LinearLayout>

